# GitHub Organization Cloner Configuration
# Copy this file to .env and update the values

# Required: Directory where repositories will be cloned
GHORG_TARGET_DIR=~/src/repos

# Required: Comma-separated list of GitHub organizations to clone
GHORG_ORGS=hashicorp,kubernetes,docker

# Optional: Number of concurrent clones (default: 25)
GHORG_CONCURRENCY=25

# Optional: GitHub Personal Access Token for authentication
# Leave empty to clone public repositories without authentication
GHORG_GITHUB_TOKEN=

# Optional: Number of repositories to process in each batch (default: 50)
GHORG_BATCH_SIZE=50